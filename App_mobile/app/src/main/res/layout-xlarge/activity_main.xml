<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="prochnof.iutinfo.univlille1.fr.app_mobile.MainActivity">

    <Button
        android:text="Puissance"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:id="@+id/puissance"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Vitesse"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:id="@+id/vitesse"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="521dp"
        android:layout_marginEnd="521dp" />

    <Button
        android:text="Calories"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:id="@+id/Calories"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/vitesse"
        android:layout_toStartOf="@+id/vitesse"
        android:layout_marginRight="270dp"
        android:layout_marginEnd="270dp" />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/videoView2"
        android:layout_alignRight="@+id/vitesse"
        android:layout_alignEnd="@+id/vitesse"
        android:layout_height="800dp" />

    <ListView
        android:layout_width="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp"
        android:id="@+id/leaderboard"
        android:dividerHeight="0dp"
        android:layout_height="500dp" />

    <ListView
        android:layout_width="400dp"
        android:layout_above="@+id/vitesse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/chat"
        android:dividerHeight="-8dp"
        android:layout_height="250dp" />

</RelativeLayout>
